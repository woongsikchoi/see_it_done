{
  "name": "see_it_done",
  "version": "0.0.21",
  "description": "see_it_done template project",
  "main": "src/index.js",
  "url": "https://www.npmjs.com/package/see_it_done",
  "scripts": {
    "test": "mocha \"./{,!(node_modules)/**/}*.runner.js\" --timeout 3000",
    "test2": "nodemon --exec \"npm test\"",
    "coverage_test": "nyc mocha \"./{,!(node_modules)/**/}*.runner.js\"",
    "coverage_report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "coverage": "npm run coverage_test && npm run coverage_report",
    "rules": "standard | snazzy",
    "fix": "standard --fix",
    "commit": "git add . && git commit -a -m \"config updates\"",
    "bump": "npm version patch -m \"Bumping to %s\"",
    "push": "echo Push and release patch to master... && echo ------------------------------ && git push origin master",
    "release": "npm run commit && npm run fix && npm test && npm run patch && start npm run push",
    "ncu": "ncu -u -l info --timeout 70000 && yarn",
    "sync": "git pull && npm run ncu && yarn && npm test && npm commit",
    "updateAll": "npm run ncu && npm run commit && npm run release",
    "patch": "npm version patch -m \"Patch version %s\"",
    "prep": "npm run fix && npm test && npm run patch",
    "commitAll": "yarn && npm run fix && npm run commit && npm test && npm run push",
    "status": "git log --since=2.weeks --pretty=format:\"%h - %an, %ar : %s\" && echo -------- && git status",
    "commitFast": "npm run commit && npm run push"
  },
  "nyc": {
    "exclude": [
      "**/test.runner.js",
      "**/readline.js**"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "mocha"
    ],
    "ignore": [
      "**/out/",
      "**/output/",
      "/lib/select2/",
      "/lib/ckeditor/",
      "tmp.js",
      "**/templates/",
      "**/dist/",
      "**/docs/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perezLamed/see_it_done.git"
  },
  "author": "Perez Lamed van Niekerk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perezLamed/see_it_done/issues"
  },
  "homepage": "https://github.com/perezLamed/see_it_done#readme",
  "dependencies": {},
  "devDependencies": {
    "lamed_folder": "^1.2.6",
    "babel-eslint": "^10.0.1",
    "codecov": "^3.5.0",
    "expect": "^24.8.0",
    "lamed_io": "^1.1.5",
    "lamed_string": "^1.1.1",
    "lamed_test": "^2.2.7",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "see_it_done": "*"
  }
}
