{
  "name": "see_it_done",
  "version": "0.0.32",
  "description": "Agile project template",
  "main": "src/index.js",
  "url": "https://www.npmjs.com/package/see_it_done",
  "scripts": {
    "test": "mocha \"./{,!(node_modules)/**/}*.runner.js\" --timeout 3000",
    "test2": "nodemon --exec \"npm test\"",
    "coverage_test": "nyc mocha \"./{,!(node_modules)/**/}*.runner.js\"  --timeout 3000",
    "coverage_report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "coverage": "npm run coverage_test && npm run coverage_report",
    "rules": "standard | snazzy",
    "fix": "standard --fix",
    "commit": "git add . && git commit -a -m \"config updates\"",
    "bump": "npm version patch -m \"Bumping to %s\"",
    "push": "echo Push and release patch to master... && echo ------------------------------ && git push origin master",
    "release": "npm run fix && npm test && npm run patch && start npm run push",
    "ncu": "ncu -u -l info --timeout 70000 && yarn",
    "patch": "npm version patch -m \"Patch version %s\"",
    "prep": "npm run fix && npm test && npm run patch",
    "commitAll": "yarn && npm run fix && npm run commit && npm test && npm run push",
    "status": "git log --since=2.weeks --pretty=format:\"%h - %an, %ar : %s\" && echo -------- && git status",
    "commitFast": "npm run commit && npm run push && git status",
    "gitfix": "git rm -r --cached . && git add . && git commit -m \".gitignore fix\"",
    "test_yarn": "yarn --ignore-scripts && npm test && npm run fix",
    "pull": "git pull && yarn --ignore-scripts && npm test",
    "upgrade": "npm run ncu && npm run commit && npm run release",
    "beta": "npm run commit && npm run release",
    "install": "yarn global add babel-eslint codecov mocha nyc snazzy standard",
    "install2": "npm install -g npm@latest"
  },
  "nyc": {
    "exclude": [
      "**/test.runner.js",
      "**/readline.js**"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "mocha"
    ],
    "ignore": [
      "**/out/",
      "**/output/",
      "/lib/select2/",
      "/lib/ckeditor/",
      "tmp.js",
      "**/templates/",
      "**/dist/",
      "**/docs/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perezLamed/see_it_done.git"
  },
  "author": "Perez Lamed van Niekerk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perezLamed/see_it_done/issues"
  },
  "homepage": "https://github.com/perezLamed/see_it_done#readme",
  "dependencies": {
    "lamed_test": "^2.2.16",
    "lamed_string": "^1.1.10",
    "lamed_folder": "^1.2.18",
    "lamed_io": "^1.1.15"
  },
  "devDependencies": {},
  "role": "JavaScript developer",
  "task": "write simple error free code",
  "reason": "to ensure quality and maintainability"
}
